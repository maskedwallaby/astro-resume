---
const {tagType, class: tag} = Astro.props;
---

<tag class={tagType}>{tagType}</tag>

<style>
	.tag,
	tag {
		/* display: inline-block; */
		border-radius: 4px;
		padding: 1px 4px;
		line-height: 1.125;
		margin-right: 2px;
		font-size: 0.75rem;
		background-color: #eee;
		border: solid 1px #ddd;
		color: gray;
		text-transform: capitalize;
	}
	.design {
		color: var(--color-brand-navy-lch);
		border-color: var(--color-brand-navy-lch);
		background-color: var(--color-brand-navy--light-lch);
	}
	.dev {
		color: var(--color-brand-raspberry-lch);
		border-color: var(--color-brand-raspberry-lch);
		background-color: var(--color-brand-raspberry--light-lch);
	}
	
</style>